{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('register') }}
{% endblock %}

{% block navbar %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="block-registration">
			{{ form_start(registrationForm) }}
			<div>
				<div class="registration-form bg-dark m-auto mb-3 col-lg-3">
					<h3 class="title text-center mt-4 mb-4 pt-3 fs-4">CRÃ‰EZ UN COMPTE</h3>

					<div class="my-3 col-10 m-auto fs-5">
						{{ form_row(registrationForm.lastname, { 'attr': {'class': 'registration-input'} }) }}
					</div>
					<div class="my-3 col-10 m-auto fs-5">
						{{ form_row(registrationForm.firstname, { 'attr': {'class': 'registration-input'} }) }}
					</div>
					<div class="my-3 col-10 m-auto fs-5">
						{{ form_row(registrationForm.email, { 'attr': {'class': 'registration-input'} }) }}
					</div>
					<div class="my-3 col-10 m-auto fs-5">
						{{ form_row(registrationForm.plainPassword, { 'attr': {'class': 'registration-input'} }) }}
					</div>
					<div class="my-3 col-10 m-auto d-flex justify-content-center">
						<button type="submit" class="btn btn-primary col-10 my-3 fs-5 p-1">Valider</button>
					</div>
				</div>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
